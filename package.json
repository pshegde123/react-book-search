  "bugs": {
    "url": "https://github.com/pshegde123/react-book-search/issues"
  },
  "dependencies": {
    "axios": "^0.19.1",
    "concurrently": "^5.0.2",
    "express": "^4.18.2",
    "mongoose": "^5.8.9",
    "react-router-dom": "^5.1.2"
  }
}
